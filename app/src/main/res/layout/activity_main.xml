<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/distanceDisplay"
        android:layout_width="277dp"
        android:layout_height="49dp"
        android:layout_marginEnd="123dp"
        android:layout_marginLeft="123dp"
        android:layout_marginRight="123dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Enter your desired distance"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceTitle" />

    <TextView
        android:id="@+id/distanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="50dp"
        android:text="Distance"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/distanceDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="284dp"
        android:layout_marginEnd="164dp"
        android:layout_marginLeft="164dp"
        android:layout_marginRight="164dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="209dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_g"
        android:layout_width="wrap_content"
        android:layout_height="194dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="129dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="129dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeDisplay">

        <RadioButton
            android:id="@+id/walking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SelectThis"
            android:text="Walking" />

        <RadioButton
            android:id="@+id/boosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SelectThis"
            android:text="Boosted Mini S" />

        <RadioButton
            android:id="@+id/evolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SelectThis"
            android:text="Evolve Skateboard" />

        <RadioButton
            android:id="@+id/segway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SelectThis"
            android:text="Segway i2 SE" />

        <RadioButton
            android:id="@+id/hoverboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SelectThis"
            android:text="Hovertrax Hoverboard" />

    </RadioGroup>

    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:text="Time Needed"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/timeDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceDisplay" />

    <TextView
        android:id="@+id/timeUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="180dp"
        android:layout_marginLeft="182dp"
        android:layout_marginRight="180dp"
        android:layout_marginStart="182dp"
        android:layout_marginTop="8dp"
        android:text="Min"
        app:layout_constraintBottom_toTopOf="@+id/radio_g"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeDisplay" />

    <TextView
        android:id="@+id/distanceUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="175dp"
        android:layout_marginLeft="176dp"
        android:layout_marginRight="175dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="7dp"
        android:text="Miles"
        app:layout_constraintBottom_toTopOf="@+id/timeTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceDisplay" />

</android.support.constraint.ConstraintLayout>